<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_title_bar_height"
        android:background="?attr/rc_user_manager_background_color">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rc_btn_cancel"
            style="@style/TextStyle.Alignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="@dimen/rc_margin_size_12"
            android:paddingStart="@dimen/rc_margin_size_10"
            android:textColor="?attr/rc_text_primary_color"
            app:drawableStartCompat="?attr/rc_navigation_bar_btn_back_img"
            android:textSize="14sp" />

        <TextView
            style="@style/TextStyle.Alignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/rc_choose_members"
            android:textColor="?attr/rc_text_primary_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_title_bar_height"
        android:background="?attr/rc_user_manager_background_color"
        android:paddingStart="@dimen/rc_margin_size_16"
        android:paddingEnd="@dimen/rc_margin_size_16">

        <EditText
            android:id="@id/rc_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rc_ac_contact_members_search_bg"
            android:drawableStart="?attr/rc_search_icon_img"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/rc_search"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingStart="@dimen/rc_margin_size_12"
            android:paddingEnd="@dimen/rc_margin_size_12"
            android:textColor="?attr/rc_text_primary_color"
            android:textColorHint="?attr/rc_text_secondary_color"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/rc_auxiliary_background_1_color">

        <ListView
            android:id="@id/rc_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:paddingStart="@dimen/rc_margin_size_16"
            android:paddingEnd="@dimen/rc_margin_size_16" />

        <TextView
            android:id="@+id/rc_popup_bg"
            style="@style/TextStyle.Alignment"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/rc_bg_toast"
            android:gravity="center"
            android:textColor="?attr/rc_text_primary_color"
            android:textSize="30sp"
            android:visibility="invisible" />

        <io.rong.imkit.widget.SideBar
            android:id="@+id/rc_sidebar"
            android:layout_width="20.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="end|center" />
    </FrameLayout>
</LinearLayout>