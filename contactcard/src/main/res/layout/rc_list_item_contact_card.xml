<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/letter"
        style="@style/TextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:clickable="false"
        android:focusable="false"
        android:text="A"
        android:textColor="?attr/rc_text_primary_color" />

    <RelativeLayout
        android:id="@+id/memberItem"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="?attr/rc_bottom_dialog_background_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rc_user_portrait"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/rc_margin_size_12"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/rc_user_name"
            style="@style/TextStyle.Alignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/rc_margin_size_12"
            android:layout_toEndOf="@+id/rc_user_portrait"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textColor="?attr/rc_text_primary_color"
            android:textSize="17sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignStart="@+id/rc_user_name"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/rc_margin_size_16"
            android:background="?attr/rc_line_background_color" />
    </RelativeLayout>


</LinearLayout>