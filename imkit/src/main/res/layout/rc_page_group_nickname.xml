<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/rc_auxiliary_background_1_color"
    xmlns:tools="http://schemas.android.com/tools"
    tools:theme="@style/RCTraditionLightTheme"
    android:orientation="vertical">

    <io.rong.imkit.usermanage.component.HeadComponent
        android:id="@+id/rc_head_component"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_title_bar_height"
        app:head_right_text="@string/rc_confirm"
        app:head_title_text="@string/rc_group_nickname" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/rc_margin_size_16"
        android:layout_marginTop="@dimen/rc_margin_size_16"
        android:paddingEnd="@dimen/rc_margin_size_16">

        <TextView
            android:textDirection="locale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rc_nickname_label"
            android:textColor="?attr/rc_text_primary_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/group_Nickname_input"
            style="@style/EditTextStyle.Alignment"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="?attr/rc_unread_msg_bg_style_color"
            android:gravity="center_vertical"
            android:hint="@string/rc_nickname_hint"
            android:textColor="?attr/rc_text_primary_color"
            android:textColorHint="?attr/rc_text_secondary_color"
            android:maxLength="64"
            android:paddingStart="@dimen/rc_margin_size_12"
            android:paddingEnd="@dimen/rc_margin_size_12"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Description Text -->
    <TextView
        android:id="@+id/description"
        android:textDirection="locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rc_margin_size_16"
        android:layout_marginEnd="@dimen/rc_margin_size_16"
        android:layout_marginTop="@dimen/rc_margin_size_10"
        android:layout_gravity="center_horizontal"
        android:text="@string/rc_nickname_description"
        android:textColor="?attr/rc_text_secondary_color"
        android:textSize="12sp" />

</LinearLayout>