<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/rc_auxiliary_background_1_color"
    android:orientation="vertical">

    <io.rong.imkit.usermanage.component.HeadComponent
        android:id="@+id/rc_head_component"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_title_bar_height"
        app:head_right_text="@string/rc_confirm"
        app:head_title_text="@string/rc_group_remark" />

    <LinearLayout
        android:layout_marginTop="@dimen/rc_margin_size_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/rc_auxiliary_background_1_color"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/rc_margin_size_16"
        android:paddingEnd="@dimen/rc_margin_size_16">

        <TextView
            android:textDirection="locale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/rc_text_primary_color"
            android:text="@string/rc_group_member_remark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/group_remark_input"
            style="@style/EditTextStyle.Alignment"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:background="?attr/rc_unread_msg_bg_style_color"
            android:gravity="center_vertical"
            android:inputType="text"
            android:ellipsize="end"
            android:hint="@string/rc_group_note_hint"
            android:maxLength="64"
            android:paddingStart="@dimen/rc_margin_size_12"
            android:paddingEnd="@dimen/rc_margin_size_12"
            android:textColor="?attr/rc_text_primary_color"
            android:textColorHint="?attr/rc_text_secondary_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>