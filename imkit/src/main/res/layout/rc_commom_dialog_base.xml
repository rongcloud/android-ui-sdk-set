<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/common_dialog_bg"
        android:minHeight="134dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/dialog_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/common_dialog_bg"
                android:paddingStart="@dimen/rc_margin_size_12"
                android:paddingTop="@dimen/rc_margin_size_16"
                android:paddingEnd="@dimen/rc_margin_size_12"
                android:textColor="#333333"
                android:textSize="22dp"
                android:visibility="gone"
                tools:text="Title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/dialog_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_tv_title"
                android:gravity="center"
                android:paddingStart="@dimen/rc_margin_size_12"
                android:paddingTop="@dimen/rc_margin_size_20"
                android:paddingEnd="@dimen/rc_margin_size_12"
                android:paddingBottom="@dimen/rc_margin_size_20"
                android:textColor="#333333"
                android:textSize="18dp"
                tools:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dialog_button_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_negative_seletor"
                android:text="@string/rc_cancel"
                android:textColor="#333333"
                android:textSize="18dp" />

            <View
                android:id="@+id/dialog_v_btn_separate"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <Button
                android:id="@+id/dialog_btn_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_positive_seletor"
                android:text="@string/rc_confirm"
                android:textColor="#368ae8"
                android:textSize="18dp"

                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>