<?xml version="1.0" encoding="utf-8"?>
<!-- 消息长按弹窗布局，包含背景和三角指示器 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 主内容区域 -->
    <LinearLayout
        android:id="@+id/rc_popup_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rc_popup_message_long_click_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_recycler_message_long_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>

    </LinearLayout>

    <!-- 三角形指示器，动态调整位置 -->
    <ImageView
        android:id="@+id/rc_popup_triangle_indicator"
        android:layout_width="16dp"
        android:layout_height="7dp"
        android:layout_gravity="bottom|start"
        android:src="@drawable/rc_lively_gray_triangle_background"
        android:contentDescription="@null"/>

</FrameLayout>
