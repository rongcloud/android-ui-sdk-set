<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/rc_common_background_color"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:theme="@style/RCTraditionLightTheme">

    <RelativeLayout
        android:id="@+id/container_contact_item"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/rc_bg_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/rc_margin_size_16"
        android:paddingEnd="@dimen/rc_margin_size_16">

        <ImageView
            android:id="@+id/iv_contact_select"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/rc_margin_size_4"
            android:layout_marginEnd="8dp"
            android:src="?attr/rc_media_file_state_check_img" />

        <ImageView
            android:id="@+id/iv_contact_portrait"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_contact_select"
            android:scaleType="centerCrop"
            android:src="?attr/rc_conversation_list_cell_portrait_msg_img" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:textDirection="locale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/rc_margin_size_12"
            android:layout_toStartOf="@id/right_container"
            android:layout_toEndOf="@id/iv_contact_portrait"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="?attr/rc_text_primary_color"
            android:textSize="17sp" />

        <!-- 将 tv_right_text 和 iv_right_arrow 包裹在 LinearLayout 中 -->
        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_remove"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:padding="6dp"
                android:src="?attr/rc_group_follow_remove_btn_img"
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right_text"
                android:textDirection="locale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rc_margin_size_12"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLength="32"
                android:textColor="?attr/rc_text_secondary_color"
                android:textSize="17sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:src="?attr/rc_right_arrow_icon_img" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_divider_height"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/rc_line_background_color" />
</LinearLayout>
